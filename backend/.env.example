# Database Configuration
DB_NAME=enkoat_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Django Configuration
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Settings (Frontend URLs)
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Instructions:
# 1. Copy this file to .env in the backend directory
# 2. Install PostgreSQL if not already installed
# 3. Create a database with the name specified in DB_NAME
# 4. Update DB_USER and DB_PASSWORD to match your PostgreSQL credentials
# 5. Keep DB_HOST as localhost unless using a remote database
# 6. DB_PORT is usually 5432 unless changed during PostgreSQL installation
